<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activity_template">
        <item name="android:background">@color/activity_background_color</item>
    </style>
    
    <style name="edit_view_template">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/view_background_color</item>
        <item name="android:hint">@string/edit_text_view_hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="button_template">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@color/view_background_color</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:text">@string/button</item>
    </style>
    
</resources>